{
  "about": {
    "name": "DaniJohnson.com Online Store",
    "author": "Jason Subers",
    "extends": "core5",
    "isDesktop": true,
    "isMobile": true,
    "defaultLanguage": "en-US",
    "version": "rc7-20-ge536a46"
  },
  "settings": {
    "allowWishlist": true,
    "showBreadcrumbs": false,
    "maxTopLevelNavItems": 4
  },
  "pageTypes": [],
  "widgets": [
    {
      "id": "featured_product_carousel",
      "displayName": "Featured Product Carousel",
      "displayTemplate": "catalog/feature-product-carousel",
      "icon": "/resources/admin/widgets/fpc.png",
      "validPageTypes": [
        "*"
      ],
      "editViewFields": [
        {
          "anchor": "100%",
          "fieldLabel": "Featured Products",
          "name": "featProd",
          "xtype": "taco-productfield"
        },
        {
          "anchor": "100%",
          "fieldLabel": "Template",
          "name": "template",
          "store": [
            [
              "modules/product/feature-product-carousel",
              "default"
            ]
          ],
          "xtype": "combo"
        }
      ],
      "defaultConfig": {
        "template": "modules/product/feature-product-carousel"
      }
    },
    {
      "id": "feature-promo-bar",
      "displayName": "Feature Promo Bar",
      "displayTemplate": "misc/feature-promo-bar",
      "icon": "/resources/admin/widgets/promo-bar.png",
      "validPageTypes": [
        "*"
      ],
      "editViewFields": [
        {
          "anchor": "100%",
          "fieldLabel": "Promotion URL",
          "name": "promoURL",
          "xtype": "textfield"
        },
        {
          "anchor": "100%",
          "fieldLabel": "Promotion Copy",
          "name": "promoCopy",
          "xtype": "htmleditor"
        }
      ],
      "defaultConfig": {}
    },
    {
      "id": "djcfooternav",
      "displayName": "DJC Footer Nav",
      "displayTemplate": "misc/footer-nav",
      "icon": "/resources/admin/widgets/footer-nav.png",
      "validPageTypes": [
        "*"
      ],
      "editViewFields": [
        {
          "anchor": "100%",
          "fieldLabel": "Main Category",
          "name": "mainCategory",
          "xtype": "categorycombobox"
        },
        {
          "anchor": "100%",
          "fieldLabel": "Number to Display",
          "name": "numberToDisplay",
          "xtype": "mz-input-number"
        }
      ],
      "defaultConfig": {
        "mainCategory": "Category",
        "numberToDisplay": 8
      }
    },
    {
      "id": "mega-promo",
      "displayName": "Mega Menu Promo",
      "displayTemplate": "misc/mega-promo",
      "icon": "/resources/admin/widgets/megapromo.png",
      "validPageTypes": [
        "*"
      ],
      "editViewFields": [
        {
          "anchor": "100%",
          "fieldLabel": "Promotion URL",
          "name": "promoURL",
          "xtype": "textfield"
        },
        {
          "anchor": "100%",
          "fieldLabel": "Image URL (image must be 245px x 285px)",
          "name": "imageURL",
          "xtype": "textfield"
        },
        {
          "anchor": "100%",
          "fieldLabel": "OR Ad HTML (please in-line all necessary css)",
          "name": "promoHTML",
          "xtype": "htmleditor"
        }
      ],
      "defaultConfig": {
        "imageURL": "/resources/images/nav-promo.jpg",
        "promoURL": "http://www.danijohnson.com/fsts"
      }
    }
  ]
}